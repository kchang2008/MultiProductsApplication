<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@drawable/dialog_bg_white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp" >

        <TextView
            android:id="@+id/Can_not_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/can_not_receive_the_verification_code"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/close_dialog_iv"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dimen_20"
            android:layout_height="@dimen/dimen_20"
            android:src="@drawable/icon_close"
            />

        <TextView
            android:layout_below="@+id/Can_not_title_tv"
            android:id="@+id/Can_not_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:text="@string/Can_not_tv1"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_below="@+id/Can_not_tv1"
            android:id="@+id/Can_not_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:text="@string/Can_not_tv2"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_below="@+id/Can_not_tv2"
            android:id="@+id/Can_not_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:text="@string/Can_not_tv3"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_below="@+id/Can_not_tv3"
            android:id="@+id/Can_not_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:text="@string/Can_not_tv4"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_below="@+id/Can_not_tv4"
            android:id="@+id/Can_not_tv5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:text="@string/Can_not_tv5"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_below="@+id/Can_not_tv5"
            android:id="@+id/Can_not_tv6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:text="@string/Can_not_tv6"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_below="@+id/Can_not_tv6"
            android:id="@+id/Can_not_tv7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:text="@string/Can_not_tv7"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/black"
        android:orientation="horizontal"
        android:visibility="invisible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:gravity="center|right"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/Contact_customer_service_tv"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:padding="@dimen/dimen_8"
            android:layout_marginRight="8dp"
            android:text="@string/Contact_customer_service"
            android:textColor="@color/text_blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/i_know_tv"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginRight="8dp"
            android:padding="@dimen/dimen_8"
            android:text="@string/i_know"
            android:textColor="@color/text_blue"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>