<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/bg_public">

    <LinearLayout
        android:id="@+id/titlelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height"
        android:orientation="horizontal">

        <LinearLayout
            android:paddingLeft="@dimen/padding"
            android:id="@+id/title_layout_back"
            android:layout_width="@dimen/layout_wight"
            android:layout_height="match_parent"
            android:gravity="center|left"
            android:orientation="horizontal"
            android:descendantFocusability="blocksDescendants"
            >

            <ImageView
                android:id="@+id/title_layout_back_iv"
                android:layout_width="@dimen/imag_back"
                android:layout_height="@dimen/imag_back" />

            <TextView
                android:layout_marginLeft="@dimen/back_marginLeft"
                android:id="@+id/title_layout_back_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/title_layout_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/title_layout_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"/>
        </LinearLayout>

        <LinearLayout
            android:paddingRight="@dimen/padding"
            android:id="@+id/title_layout_right"
            android:layout_width="@dimen/layout_wight"
            android:layout_height="match_parent"
            android:gravity="center|right"
            android:orientation="horizontal"
            android:descendantFocusability="blocksDescendants">

            <TextView
                android:layout_marginRight="@dimen/right_marginRight"
                android:id="@+id/title_layout_right_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_blue"/>

            <ImageView
                android:id="@+id/title_layout_right_iv"
                android:layout_width="@dimen/imag_right"
                android:layout_height="@dimen/imag_right" />

        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/line_text"
        android:layout_width="match_parent"
        android:layout_height="0.5dip"
        android:background="#95999f" />
</LinearLayout>