<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:background="@drawable/dialog_bg_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp" >

        <TextView
            android:id="@+id/sendvercode_dia_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/str_card_sms_verification"
            android:textColor="@color/text_b"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sendvercode_dia_mesage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:includeFontPadding="false"
            android:lineSpacingExtra="2dp"
            android:text="@string/str_dialog_mesage"
            android:textColor="@color/login_hint"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/show_time_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:visibility="gone" >

            <TextView
                android:id="@+id/sendvercode_dia_hint_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_effective_time"
                android:textColor="@color/login_hint" />

            <TextView
                android:id="@+id/sendvercode_dia_effective_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/sendvercode_dia_hint_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/login_hint" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="35dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/sendvercode_dia_send_et"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="@string/please_enter_verification_code"
                android:longClickable="false"
                android:textColor="@color/black"
                android:textColorHint="@color/login_hint"
                android:layout_marginRight="2dp"
                android:textSize="16sp" >
            </EditText>

            <ImageView
                android:layout_marginRight="2dp"
                android:id="@+id/code_line_iv"
                android:layout_width="1px"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@color/login_line" />

            <Button
                android:id="@+id/csendvercode_dia_send_bt"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1.1"
                android:background="@null"
                android:text="@string/get_verification_code"
                android:textColor="@color/text_blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_layout"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="@color/login_line"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="52dp"
        android:gravity="right"
        android:orientation="horizontal"
        android:padding="8dp" >

        <Button
            android:id="@+id/sendvercode_dia_cancle_bt"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:text="@string/cancel"
            android:textColor="@color/text_blue" />

        <Button
            android:id="@+id/sendvercode_dia_ok_bt"
            android:layout_width="50dp"
            android:layout_height="36dp"
            android:background="@null"
            android:text="@string/confirm"
            android:textColor="@color/text_blue" />
    </LinearLayout>

</LinearLayout>